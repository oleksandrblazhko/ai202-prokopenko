          "type": "integer",
            "minLength": 1
        },
        "description": {
          "description": "Опис фіз. активності",
          "type": "string",
  	        "maxLength": 2048
        },
        "date": {
          "description": "Дата створення фіз. активності",
          "type": "string",
          "format": "data"
        },
        "required": [ "id", "goal", "description", "date" ]      
    },
    "title": "Recipe",
