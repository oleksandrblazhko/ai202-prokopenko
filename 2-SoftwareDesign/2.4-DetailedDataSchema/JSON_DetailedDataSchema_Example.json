      "type": "object",
      "properties": {
        "id": {
          "description": "Порядковий номер фітнес трекеру",
          "type": "integer",
          "minimum": 1
        },
        "name": {
          "description": "Назва трекеру",
          "type": "string",
  	        "maxLength": 30
        },
        "required": [ "id", "name" ]
    },
}
